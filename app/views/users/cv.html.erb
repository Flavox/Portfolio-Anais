<div class="mt-3">
  <h1>FORMATION</h1>
  <ul class="d-flex flex-column gap-5 mt-4">
    <% @formations.each do |formation| %>
      <li class="d-flex gap-2 align-items-center">
        <div class="d-flex flex-column background-green width-55">
          <p class="mb-0"><%= formation.annee_debut.strftime("%Y") %></p>
          <p class="mb-0"><%= formation.annee_fin.strftime("%Y") %></p>
        </div>
        <p class="mb-0 fs-4"><%= formation.emploi %> - <%= formation.ville %></p>
      </li>
    <% end %>
  </ul>

  <h1 class="mt-5">expériences</h1>
  <h2 class="mt-4">Professionelles</h2>
  <ul class="d-flex flex-column gap-5 mt-3">
    <% @experiences_pro.each do |experience_pro| %>
      <li class="d-flex gap-2 align-items-center">
        <div class="d-flex flex-column background-green width-55">
          <p class="mb-0"><%= experience_pro.annee_debut.strftime("%Y") %></p>
          <p class="mb-0"><%= experience_pro.annee_fin.strftime("%Y") %></p>
        </div>
        <p class="mb-0 fs-4"><%= experience_pro.emploi %> - <%= experience_pro.ville %></p>
      </li>
    <% end %>
  </ul>

  <h2 class="mt-4">Stages</h2>
  <ul class="d-flex flex-column gap-5 mt-3">
    <% @stages.each do |stage| %>
      <li class="d-flex gap-2 align-items-center">
        <div class="d-flex flex-column background-green width-55">
          <p class="mb-0"><%= stage.annee_debut.strftime("%Y") %></p>
          <p class="mb-0"><%= stage.annee_fin.strftime("%Y") %></p>
        </div>
        <p class="mb-0 fs-4"><%= stage.emploi %> - <%= stage.ville %></p>
      </li>
    <% end %>
  </ul>

  <h1 class='mt-5'>Compétences</h1>
  <ul class='d-flex justify-content-evenly align-items-end row row-cols-3 ps-0 mt-3'>
    <% @competences.each do |competence| %>
      <li class='d-flex flex-column col mt-3'>
        <p><%= competence.competence %></p>
        <div class="progress">
          <div class="progress-bar progress-bar-striped" role="progressbar" aria-label="Default striped example" style='width: <%= competence.progression%>%' aria-valuenow="<%= competence.progression%>" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
