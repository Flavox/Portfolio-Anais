        <div class="mt-3" data-aos="fade-in" data-aos-duration = "900" data-aos-easing= "ease-in-sine">
          <%= image_tag photo.source, alt: "Photo nÂ° #{index + 1}", class: "d-block w-100" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
