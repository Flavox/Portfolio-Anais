<div class="container">
  <%= simple_form_for @photo do |f| %>
    <%= f.file_field :source %>
    <%= f.collection_select :realisation_id, current_user.realisations, :id, :titre, prompt: "À quelle réalisation appartient cette photo ?" %>    <div>
      <%= f.submit "OKay", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
