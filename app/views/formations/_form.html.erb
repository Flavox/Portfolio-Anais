<div class="container">
  <%= simple_form_for @formation do |f| %>
    <%= f.input :annee_debut, as: :string, input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :annee_fin, as: :string, input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :emploi %>
    <%= f.input :organisation %>
    <%= f.input :ville %>
    <%= f.input :detail %>
    <%= f.input :experience, collection: ['experience pro', 'stage', 'formation'], prompt: "Choisis le type d'experience" %>
    <div>
      <%= f.submit "OKay", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
